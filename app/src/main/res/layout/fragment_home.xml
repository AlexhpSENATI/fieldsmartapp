<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- ENCABEZADO: Nombre + Avatar -->
        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_white_rounded"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvSaludo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HOLA, "
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_person"
                android:contentDescription="Avatar"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- TÍTULO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="⚡ Datos de Sensores"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- DATOS DE SENSORES -->
        <TextView
            android:id="@+id/tvBomba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bomba: --"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvHumedadSuelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humedad de suelo: --"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvHumedadAmbiental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humedad ambiental: --"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvTemperatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperatura: --"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvModoAutomatico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modo automático: --"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvTiempoUso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo de uso: --"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvUltimoRiego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Último riego: --"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvEnEspera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En espera: --"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvTiempoRestante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo restante: --"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP: --"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="4dp" />

    </LinearLayout>
</ScrollView>
