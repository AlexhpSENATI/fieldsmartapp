<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- ENCABEZADO -->
    <include
        layout="@layout/include_encabezado"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Icono 1 -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_confsistema"
                    android:contentDescription="Icono Info"
                    android:layout_marginStart="0dp"
                    app:tint="#5E04B4"/>

                <!-- TÍTULO -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configuración del Sistema"
                    android:textColor="#5E04B4"
                    android:textSize="17sp"

                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

<!--            &lt;!&ndash; TÍTULO &ndash;&gt;-->
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Configuración del Sistema"-->
<!--                android:textColor="#5E04B4"-->
<!--                android:textSize="16sp"-->
<!--                android:textStyle="bold"-->
<!--                android:layout_marginBottom="16dp" />-->
<!--            -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Icono 1 -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_modo"
                    android:contentDescription="Icono Info"
                    android:layout_marginStart="8dp"
                    app:tint="#FF00FF"/>

                <!-- MODO DE OPERACIÓN -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modo de operación:"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/spinner_background"
                android:paddingStart="12dp"
                android:paddingEnd="40dp">

                <Spinner
                    android:id="@+id/spinnerModo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/modos_array"
                    android:background="@android:color/transparent"
                    android:popupBackground="#FFFFFF"
                    android:spinnerMode="dropdown"
                    android:dropDownSelector="#E3F2FD"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    android:dropDownVerticalOffset="8dp"
                    android:theme="@style/SpinnerTextStyle" />

                <ImageView
                    android:id="@+id/spinnerIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:contentDescription="@string/desc_spinner_icon" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Icono 1 -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bomba"
                    android:contentDescription="Icono Info"
                    android:layout_marginStart="8dp"
                    app:tint="#1313FA"/>

                <!-- UMBRAL MÍNIMO -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Umbral mínimo (%):"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/editUmbralMin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="#000000"
                android:background="@drawable/edittext_custom"
                android:padding="10dp"
                android:layout_marginBottom="12dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Icono 1 -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_tiempo"
                    android:contentDescription="Icono Info"
                    android:layout_marginStart="8dp"
                    app:tint="#F44336"/>

                <!-- UMBRAL MÁXIMO -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Umbral máximo (%):"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />
            </LinearLayout>


            <EditText
                android:id="@+id/editUmbralMax"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="#000000"
                android:background="@drawable/edittext_custom"
                android:padding="10dp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Icono 1 -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_restante"
                    android:contentDescription="Icono Info"
                    android:layout_marginStart="8dp"
                    app:tint="#9900FF"/>

                <!-- TIEMPO DE RIEGO -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiempo de riego (segundos):"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/editTiempoRiego"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="#000000"
                android:background="@drawable/edittext_custom"
                android:padding="10dp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Icono 1 -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_espera"
                    android:contentDescription="Icono Info"
                    android:layout_marginStart="8dp"
                    app:tint="#004437"/>
                <!-- TIEMPO DE ESPERA -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiempo de espera (segundos):"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <EditText
                android:id="@+id/editTiempoEspera"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="number"
                android:textColor="#000000"
                android:background="@drawable/edittext_custom"
                android:padding="10dp"
                android:layout_marginBottom="20dp" />

            <!-- BOTÓN GUARDAR -->
            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar configuración"
                android:backgroundTint="#4CAF50"
                android:drawableStart="@drawable/ic_guardar"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp" />

            <!-- BOTONES ENCENDER / APAGAR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btnEncender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encender"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#2196F3"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnApagar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apagar"
                    android:backgroundTint="#F44336"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
