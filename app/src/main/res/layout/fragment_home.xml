<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvBomba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bomba: --"
            android:textSize="18sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvHumedadSuelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humedad suelo: --"
            android:textSize="18sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvHumedadAmbiental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humedad ambiental: --"
            android:textSize="18sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvTemperatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperatura: --"
            android:textSize="18sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvModoAutomatico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modo automático: --"
            android:textSize="18sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvTiempoUso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo de uso: --"
            android:textSize="18sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvUltimoRiego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Último riego: --"
            android:textSize="18sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvEnEspera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="En espera: --"
            android:textSize="18sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvTiempoRestante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo restante: --"
            android:textSize="18sp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP: --"
            android:textSize="18sp"
            android:padding="4dp" />

    </LinearLayout>
</ScrollView>
