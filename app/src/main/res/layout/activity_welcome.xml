<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp">

    <!-- Texto principal -->
    <TextView
        android:id="@+id/txtBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido!"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo principal -->

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="330dp"
        android:layout_height="350dp"
        android:layout_marginTop="28dp"
        android:adjustViewBounds="true"
        android:contentDescription="Logo de FieldSmart"
        android:scaleType="fitCenter"
        android:src="@drawable/fieldsmart_logo"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtBienvenida"
        app:layout_constraintWidth_percent="0.6" />
    <!-- Texto 'FIELDSMART' (imagen) -->
    <ImageView
        android:id="@+id/imgFieldsmart"
        android:layout_width="378dp"
        android:layout_height="51dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:contentDescription="Texto FieldSmart"
        android:scaleType="fitCenter"
        android:src="@drawable/fieldsmart_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintWidth_percent="0.55" />
    <!-- Descripción -->
    <TextView
        android:id="@+id/textDescripcion"
        android:layout_width="368dp"
        android:layout_height="114dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Sistema inteligente de riego automatizado diseñado para optimizar el uso del agua, mantener tus áreas verdes saludables y reducir el trabajo manual"
        android:textColor="#CCCCCC"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgFieldsmart"
        app:layout_constraintWidth_percent="0.85" />
    <!-- Botón Iniciar -->
    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="353dp"
        android:layout_height="62dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#FFFFFF"
        android:padding="12dp"
        android:text="Iniciar"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.75" />
</androidx.constraintlayout.widget.ConstraintLayout>
