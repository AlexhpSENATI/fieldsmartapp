<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ENCABEZADO: Nombre + Avatar -->
        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_card_white_rounded"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvSaludo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HOLA, "
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/circle_background"
                android:contentDescription="Avatar"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person" />
        </LinearLayout>

        <!-- TÍTULO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuración del Sistema"
            android:textColor="#FBF8F8"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- MODO DE OPERACIÓN -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modo de operación:"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerModo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:entries="@array/modos_array"
            android:background="@android:drawable/btn_dropdown"
            android:padding="8dp"
            android:textColor="#000000"

            android:layout_marginBottom="16dp" />

        <!-- UMBRAL MÍNIMO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Umbral mínimo (%):"
            android:textSize="16sp"
            android:textColor="#FAF9F9"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editUmbralMin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:textColor="#000000"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="12dp" />

        <!-- UMBRAL MÁXIMO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Umbral máximo (%):"
            android:textSize="16sp"
            android:textColor="#F8F4F4"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editUmbralMax"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:textColor="#000000"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="12dp" />

        <!-- TIEMPO DE RIEGO -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo de riego (segundos):"
            android:textSize="16sp"
            android:textColor="#FBF9F9"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editTiempoRiego"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:textColor="#000000"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="12dp" />

        <!-- TIEMPO DE ESPERA -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo de espera (segundos):"
            android:textSize="16sp"
            android:textColor="#FDFCFC"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editTiempoEspera"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:textColor="#000000"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginBottom="20dp" />

        <!-- BOTÓN GUARDAR -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar configuración"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp" />

        <!-- BOTONES ENCENDER / APAGAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnEncender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encender"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnApagar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apagar"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
